@using ISEN.DotNet.Library;
@{
    ViewData["Title"] = "Drivers";
}
@model IEnumerable<Driver>

<div class="row">
    <div class="col-md-12">
      <h1>Drivers <small>Liste</small></h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
          <thead>
              <tr>
                <th>Id</th>
                <th>Pr√©nom</th>
                <th>Nom</th>
                <th> </th>
              </tr>
          </thead>
          <tbody>
          @foreach(var Driver in Model)
          {
            <tr>
                <td>@Driver.Id</td>
                <td>@Driver.FirstName</td>
                <td>@Driver.LastName</td>
                <td>
                    <a asp-controller="Driver" asp-action="Detail" asp-route-id="@Driver.Id">More...</a>
                    <a asp-controller="Driver" asp-action="Delete" asp-route-id="@Driver.Id">Delete...</a>
                </td>
            </tr>
          }
          </tbody>
      </table>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <a asp-controller="Driver" asp-action="Detail" class="btn btn-default">Add...</a>
    </div>
</div>